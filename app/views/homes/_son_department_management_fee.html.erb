<!--  事业部 层级显示下属部门的考核，不再显示个人的考核 -->

<% if(@department.has_sub_departments?) %>
<div class="page-header">
  <h1>您管理的部门业绩考核情况</h1>
</div>
  <table class="table table-striped table-hover", data-toggle="table" >
    <thead>
      <tr>
        <th>部门</th>
        <th>全年</th>
        <th>一季度</th>
        <th>二季度</th>
        <th>三季度</th>
        <th>四季度</th>
        <th>当前规模</th>
        <th>年化规模</th>
      </tr>
    </thead>
    <tbody>
      <% logger.info "==========#{@department.sub_departments.size}=========" %>
      <% @department.sub_departments.each do |department| %>
      <% logger.info "==========#{department.name}=========" %>
      <% logger.info department.tasks %>
      <tr>
        <td><%=department.name%>管理费规模</td>
        <td><%=f2 department.count_income Date.one_year %></td>
        <td><%=f2 department.count_income Date.first_quarter %></td>
        <td><%=f2 department.count_income Date.second_quarter  %></td>
        <td><%=f2 department.count_income Date.third_quarter%></td>
        <td><%=f2 department.count_income Date.fourth_quarter%></td>
        <td><%=f2 department.count_scale %></td>
        <td><%=f2 department.count_annual_scale %></td>
      </tr>
      <tr>
        <td><%=department.name%>考核指标</td>
        <td><%=f2 department.count_management_fee_tasks %></td>
        <td><%=f2 department.count_management_fee_tasks/4 %></td>
        <td><%=f2 department.count_management_fee_tasks/4 %></td>
        <td><%=f2 department.count_management_fee_tasks/4 %></td>
        <td><%=f2 department.count_management_fee_tasks/4 %></td>
        <td><%=f2 department.count_scale_tasks%></td>
        <td><%=f2 department.count_scale_tasks %></td>
      </tr>
      <% end %>
  </tbody>
  </table>   
<%end%>