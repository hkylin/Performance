<!--  事业部 层级显示下属部门的考核，不再显示个人的考核 -->
<% if(@department.has_sub_departments) %>

  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>部门</th>
        <th>全年</th>
        <th>一季度</th>
        <th>二季度</th>
        <th>三季度</th>
        <th>四季度</th>
      </tr>
    </thead>
    <tbody>
      <% @department.sub_departments.each do |department| %>
      <% logger.info department.tasks %>
      <tr>
        <td><%=department.name%>管理费规模</td>
        <td><%=f2 department.count_fee one_year %></td>
        <td><%=f2 department.count_fee Date.first_quarter %></td>
        <td><%=f2 department.count_fee Date.second_quarter  %></td>
        <td><%=f2 department.count_fee Date.third_quarter%></td>
        <td><%=f2 department.count_fee Date.fourth_quarter%></td>
      </tr>
      <tr>
        <td><%=department.name%>考核指标</td>
        <td><%=f2 department.count_management_fee_tasks %></td>
        <td><%=f2 department.count_management_fee_tasks/4 %></td>
        <td><%=f2 department.count_management_fee_tasks/4 %></td>
        <td><%=f2 department.count_management_fee_tasks/4 %></td>
        <td><%=f2 department.count_management_fee_tasks/4 %></td>
      </tr>
      <% end %>
  </tbody>
  </table>   
<%end%>