<!--  一级部门显示员工的考核 -->
<div class="page-header">
  <h1>部门成员业绩考核完成情况</h1>
</div>

<table class="table table-striped table-hover" >
  <thead>
    <tr>
      <th>姓名</th>
      <th>全年</th>
      <th>一季度</th>
      <th>二季度</th>
      <th>三季度</th>
      <th>四季度</th>
    </tr>
  </thead>
  <tbody>
    <% @department.members.each do |user| %>
    <tr>
      <td><%=user.username%>管理费规模</td>
      <td><%=f2 user.count_fee Date.one_year %></td>
      <td><%=f2 user.count_fee Date.first_quarter %></td>
      <td><%=f2 user.count_fee Date.second_quarter  %></td>
      <td><%=f2 user.count_fee Date.third_quarter %></td>
      <td><%=f2 user.count_fee Date.fourth_quarter %></td>
    </tr>
    <tr>
      <td><%=user.username%>考核指标</td>
      <td><%=f2 user.count_management_fee_tasks %></td>
      <td><%=f2 user.count_first_task %></td>
      <td><%=f2 user.count_first_task %></td>
      <td><%=f2 user.count_first_task %></td>
      <td><%=f2 user.count_first_task %></td>
    </tr>
    <% end %>
</tbody>
</table>   