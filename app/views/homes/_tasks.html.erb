<div class="page-header">
  <h1>考核指标</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> ID </th>
      <th> 指标名称 </th>
      <th> 指标类型 </th>
      <th> 数量 </th>
      <th> 开始时间 </th>
      <th> 结束时间 </th>
      <th> 描述 </th>
      <th> 任务类型 </th>
      <th> 任务ID </th>
      <th> 创建时间 </th>
      <th> 操作 </th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path(task) %></td>
        <td><%= task.name %></td>
        <td><%= task.task_type %></td>
        <td><%= task.amount %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.description %></td>
        <td><%= task.taskable_type %></td>
        <td><%= task.taskable_id %></td>
        <td><%=l task.created_at %></td>
        <td>
          <%= link_to :编辑,
                      edit_task_path(task), :class => 'btn btn-default btn-xs' %>
          <%= link_to :删除,
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新建任务指标', new_task_path, :class => 'btn btn-primary' %>
