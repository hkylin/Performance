<div class="page-header">
  <h1>考核指标</h1>
</div>
<table class="table table-striped" >
  <thead>
    <tr>
      <th> ID </th>
      <th> 年 </th>
      <th> 规模 </th>
      <th> 收入 </th>
      <th> 创建时间 </th>
      <th> 操作 </th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path(task) %></td>
        <td><%= task.year %></td>
        <td><%= task.amount %></td>
        <td><%= task.profit %></td>
        <td><%=l task.created_at.to_date %></td>
        <td>
          <%= link_to :编辑,
                      edit_task_path(task), :class => 'btn btn-default btn-xs' %>
          <%= link_to :删除,
                      task_path(task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新建任务指标', new_task_path, :class => 'btn btn-primary' %>