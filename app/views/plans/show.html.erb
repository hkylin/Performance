<%- model_class = Modification -%>
<div class="page-header">
  <h1><%=@plan.name%>——资管</h1>
</div>
<table class="table table-striped" , data-toggle="table">
  <thead>
    <tr>
      <th>编号</th>
      <th>名称</th>
      <th>类型</th>
      <th>规模</th>
      <th>开始日期</th>
      <th>结束日期</th>
      
      <th>总管理费</th>
      <th>本年已计提管理费</th>
      
      <th>部门</th>
      <th>费率</th>
      <!-- 
      <th><%= model_class.human_attribute_name(:charge_type) %></th>
      <th><%= model_class.human_attribute_name(:charge_amount) %></th>
      <th>投资经理</th>
      <th>费用金额</th>
      <th>合作者</th> 
    -->
      <th>归属类型</th>
      <th>合作伙伴</th>
      <th>产品模式</th>
      <th>注释</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    
      <tr>
        <td><%= link_to @plan.number, plan_path(@plan), :class=>"btn btn-link" %></td>
        <td><%=@plan.name %></td>
        <td><%=@plan.plan_type %></td>
        <td><%=@plan.scale %></td>
        <td><%=@plan.start_date %></td>
        <td><%=@plan.end_date %></td>
        <td><%= f2 @plan.whole_plan_fee %></td>
        <td><%= f2 @plan.this_year_fee %></td>
        <td><%=@plan.department.name %></td>
        <td><%=@plan.rate %></td>
        <!-- 
        <td><%=@plan.charge_type %></td>
        <td><%=@plan.charge_amount %></td>
        <td><%=@plan.investment_manager %></td>
        <td><%=@plan.fee %></td>
        <td>|
          <% @plan.cooperations.each do |co|%>
            <%= "#{co.user.username} #{co.ratio}" %>|
          <% end %>
        </td> -->
        <td><%=@plan.ownership_type %></td>
        <td><%=@plan.parter %></td>
        
        <td><%=@plan.model_type %></td>
        <td><%=@plan.notes %></td>
         <td>
          <%= link_to :编辑,
                      edit_plan_path(@plan), :class => 'btn btn-default btn-xs' %>
          <%= link_to :删除,
                      @plan,
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    
  </tbody>
</table>
