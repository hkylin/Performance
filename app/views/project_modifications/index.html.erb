<%- model_class = ProjectModification -%>
<div class="page-header">
  <h1>项目调整列表</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:scale) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:management_fee) %></th>
      <th><%= model_class.human_attribute_name(:rate) %></th>
      <th><%= model_class.human_attribute_name(:fee) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_modifications.each do |project_modification| %>
      <tr>
        <td><%= link_to project_modification.id, project_modification_path(project_modification) %></td>
        <td><%= link_to project_modification.project.name, project_modification_path(project_modification) %></td>
        <td><%= project_modification.scale %></td>
        <td><%= project_modification.start_date %></td>
        <td><%= project_modification.end_date %></td>
        <td><%= project_modification.management_fee %></td>
        <td><%= project_modification.rate %></td>
        <td><%= project_modification.fee %></td>
        <td><%= project_modification.notes %></td>
        <td><%=l project_modification.created_at %></td>
        <td>
          <%= link_to :编辑,
                      edit_project_modification_path(project_modification), :class => 'btn btn-default btn-xs' %>
          <%= link_to  :删除,
                      project_modification_path(project_modification),
                      :method => :delete,
                      :data => { :confirm => '危险操作，请确认是否删除?' },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to :新建—项目调整,
            new_project_project_modification_path(@project),
            :class => 'btn btn-primary' %> |
<%= link_to '当前资管计划的项目列表', plan_projects_path(@project.plan) %> |
<%= link_to '我的资管计划表', plans_path %>