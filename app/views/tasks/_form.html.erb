    <%=f.error_span(:end_date) %>
  </div>
  <div class="form-group">
    <%= f.label :描述信息, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
